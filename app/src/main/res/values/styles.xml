<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <style name="LoadTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/yellow_500</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/loading</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:immersive">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>


    <style name="ActionButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:minWidth">24dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <!--    <item name="android:paddingEnd">0dp</item> 加这句，最后的icon紧贴右边，不加这个，actionMenuView与左边有间隙。
                            所以加上这句，然后在Toolbar设置右边距    android:paddingEnd="12dp"  -->


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 侧边栏item高度  -->
    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">56dp
        </item><!-- menu item height- vary as u need -->
    </style>

    <!-- toolbar titleEntity-->
    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle.Base">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--预登记表单-->
    <style name="reg_tv_style0">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_lab_msg" parent="@android:style/TextAppearance">
        <item name="android:textColor">#c6174e</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="reg_et_style0">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:theme">@style/et_line_style</item>
    </style>


    <style name="tv_reg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="tv_reg_mobile_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="et_reg_style" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/reg_et_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">@color/grey_500</item>
    </style>

    <style name="et_reg_mobile_style" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/reg_et_size</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">@color/grey_500</item>
    </style>

    <style name="reg_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2e2e2e</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="reg_et_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:nextFocusDown">@+id/et_company</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="android:theme">@style/et_line_style</item>
    </style>


    <!--edittext下面的文字-->
    <style name="reg_tv_help_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="et_line_style" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:height">0.3dp</item>
    </style>


    <!-- MyChinaplas -->
    <style name="cps_card_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">180dp</item>
