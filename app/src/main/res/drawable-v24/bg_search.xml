<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <gradient
                android:angle="270"
                android:endColor="@color/bg_purple1"
                android:startColor="@color/colorPrimary"
                android:type="linear" />
            <!--    android:startColor="@color/colorPrimaryDark"-->

            <!-- 大小 -->
            <size
                android:width="150dp"
                android:height="56dp" /><!-- 宽度和高度 -->

        </shape>

    </item>

    <item
        android:bottom="10dp"
        android:left="16dp"
        android:right="16dp"
        android:top="10dp">
        <shape android:shape="rectangle">

            <solid android:color="#ffffff" />

            <corners android:radius="30dp" />

            <size
                android:width="150dp"
                android:height="48dp" />


        </shape>

    </item>


</layer-list>